    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
    PengaduanFaskesController controller = new PengaduanFaskesController();

    String jenisFaskes = cbJenisFaskes.getSelectedItem().toString();
    String keluhan = txtKeluhan.getText().trim();
    String tenagaMedis = jComboBox2.getSelectedItem().toString();

    if (jenisFaskes.isEmpty() || keluhan.isEmpty() || tenagaMedis.isEmpty()) {
        JOptionPane.showMessageDialog(this,
                "Semua data harus diisi!",
                "Validasi",
                JOptionPane.WARNING_MESSAGE);
        return;
}

    LocalDate tanggalPengaduan = LocalDate.now();

    boolean success = controller.insertPengaduanFaskes(
            jenisFaskes,
            keluhan,
            tenagaMedis,
            tanggalPengaduan
    );

    if (success) {
        new kirim_berhasil(null, true).setVisible(true);
        resetForm();
    } else {
        JOptionPane.showMessageDialog(this,
                "Gagal mengirim pengaduan!",
                "Error",
                JOptionPane.ERROR_MESSAGE);
    }

    }//GEN-LAST:event_jButton1ActionPerformed

private void resetForm() {
    cbJenisFaskes.setSelectedIndex(0);
    txtKeluhan.setText("");
    jComboBox2.setSelectedIndex(0);
}


